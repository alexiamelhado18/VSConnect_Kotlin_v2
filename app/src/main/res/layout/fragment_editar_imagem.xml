<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_marinho"
>
    <TextView
            android:text="Editar Imagem de Perfil"
            android:fontFamily="@font/titilliumweb_bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloServicos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagem_perfil"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/white"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloServicos"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.445"/>
    <ImageView
            android:id="@+id/icone_lapis"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icone_lapis"

            app:layout_constraintTop_toTopOf="@+id/imagem_perfil"
            app:layout_constraintBottom_toBottomOf="@+id/imagem_perfil"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imagem_perfil"
            app:layout_constraintEnd_toEndOf="@+id/imagem_perfil"
            app:layout_constraintHorizontal_bias="1.0"
    />

</androidx.constraintlayout.widget.ConstraintLayout>